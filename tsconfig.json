{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "importHelpers": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "noImplicitAny": false,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@declarations/*": ["src/declarations/*"],
      "@types/*": ["src/website/src/types/*"]
    },

    "lib": ["esnext", "dom", "dom.iterable", "scripthost"],
    "allowJs": true,
    "outDir": "dist"
  },
  "include": ["src/website/src/**/*.ts"],
  "exclude": ["node_modules"]
}
